@model List<ShoppingCartPractice.Models.ViewModel.MemberListViewModel>

@{
    ViewBag.Title = "ManageMember";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ManageMember</h2>
<table class="table">
    <thead>
        <tr>
            <td colspan="2">
                操作
            </td>
            <td>
                會員暱稱
            </td>
            <td>
                會員密碼
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("編輯", "EditMember","Account", new { id = item.Id }, new { @class = "btn btn-default" })
                </td>
                <td>
                    @using (Html.BeginForm("Delete", "ProductList", FormMethod.Post, new { @class = "Delete" }))
                    {
                        @Html.HiddenFor(m => item.Id)
                        <input type="submit" value="刪除" class="btn btn-default" />
                    }
                </td>
                <td>
                    @item.UsrName
                </td>
                <td>
                    @item.Password
                </td>
            </tr>
        }
    </tbody>
</table>