@model List<ShoppingCartPractice.Models.ViewModel.ProductListViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>商品列表</h2>
@if (ViewBag.ResultMessage != null)
{
    @Html.Label("info", (string)ViewBag.ResultMessage, new { @class = "text-danger" })
}
<table class="table">
    <thead>
        <tr>
            <td colspan="2">
                操作
            </td>
            <td>
                商品名稱
            </td>
            <td>
                商品價格
            </td>
            <td>
                商品描述
            </td>
            <td>
                商品分類編號
            </td>
            <td>
                商品生效日
            </td>
            <td>
                商品預設圖片編號
            </td>
            <td>
                商品庫存量
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
            <td>
                @using (Html.BeginForm("Delete", "ProductList", FormMethod.Post, new { @class = "Delete" }))
                {
                    @Html.HiddenFor(m => item.Id)
                    <input type="submit" value="刪除" class="btn btn-default" />
                }
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.CategoryId
            </td>
            <td>
                @item.PublishDate
            </td>
            <td>
                @item.DefaultImageId
            </td>
            <td>
                @item.Quantity
            </td>
        </tr>
        }
    </tbody>
</table>
